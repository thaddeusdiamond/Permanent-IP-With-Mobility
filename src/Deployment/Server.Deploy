#!/bin/sh

if [ $# -ne 0 ]; then
  echo "Usage: ./Server.Deploy"
  exit $E_BADARGS
fi

# The following file deploys a rendezvous server and a mobile node to the
# servers necessary given the file's configuration
ssh dolphin "cd $PWD; bin/RunDNS SDNS &> /dev/null" & &> /dev/null
ssh cobra   "cd $PWD; bin/RunRS SRS &> /dev/null"   & &> /dev/null
echo -e "\e[00;32mServer setup complete\e[00m"
